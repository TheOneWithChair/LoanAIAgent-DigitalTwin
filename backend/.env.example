# Application Configuration
APP_NAME=Loan Processing AI Agent
APP_VERSION=1.0.0
DEBUG=False

# Database (Neon DB - Serverless Postgres)
# Get your connection string from https://neon.tech
DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require
DB_ECHO=False

# AI API Keys (choose one or more)
# Get Groq API key from: https://console.groq.com/keys (FREE - Fast inference)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Optional: OpenAI (if you prefer GPT models)
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Optional: Anthropic (if you prefer Claude models)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# AI Provider Configuration
AI_PROVIDER=groq  # Options: groq, openai, anthropic
GROQ_MODEL=llama-3.3-70b-versatile  # or mixtral-8x7b-32768, gemma2-9b-it

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Agent Configuration
CREDIT_SCORING_MODEL=gpt-4
LOAN_DECISION_MODEL=gpt-4
VERIFICATION_MODEL=gpt-4
RISK_MONITORING_MODEL=gpt-4

# Business Rules
MAX_LOAN_AMOUNT=1000000.0
MIN_CREDIT_SCORE=300
MAX_CREDIT_SCORE=850
MAX_DTI_RATIO=0.50

# Agent Timeouts (seconds)
AGENT_TIMEOUT=30
ORCHESTRATOR_TIMEOUT=120
